<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
      name="token"
      label="COM_WEBSERVICES_CREDENTIAL_TITLE"
      description="COM_WEBSERVICES_CREDENTIAL_TITLE_DESC">

        <field
          name="url"
          type="text"
          size="200"
          label="COM_WEBSERVICES_CONFIG_URL"
          description="COM_WEBSERVICES_CONFIG_URL_DESC"
          default="http://moncada.matware.com.ar/j3-rest-api/api/joomla:articles"
					class="input-xxlarge"
          />

        <field
          name="username"
          type="text"
          size="60"
          label="COM_WEBSERVICES_CONFIG_USERNAME"
          description="COM_WEBSERVICES_CONFIG_USERNAME_DESC"
          default="anonymous"
					class="input-xxlarge"
          />

        <field
          name="password"
          type="password"
          size="60"
          label="COM_WEBSERVICES_CONFIG_PASSWORD"
          description="COM_WEBSERVICES_CONFIG_PASSWORD_DESC"
          default=""
					class="input-xxlarge"
          />

        <field
          name="signature_method"
          type="list"
          label="COM_WEBSERVICES_SIGNATURE_METHOD"
          description="COM_WEBSERVICES_SIGNATURE_METHOD_DESC"
          size="1"
          class="inputbox input-xxlarge"
          default="PLAINTEXT">

            <option value="PLAINTEXT">PLAINTEXT</option>
        </field>
    </fieldset>
</form>
